{
  "// ABOUT": "GitHub MCP Server - Repository and issue management",
  "// DOCS": "https://github.com/modelcontextprotocol/servers/tree/main/src/github",
  "// INSTALL": "npx @modelcontextprotocol/server-github",

  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_xxxxxxxxxxxxxxxxxxxx"
      }
    }
  },

  "// TOKEN_SETUP": {
    "steps": [
      "1. Go to https://github.com/settings/tokens",
      "2. Click 'Generate new token (classic)'",
      "3. Select scopes: repo, read:org, read:user",
      "4. Copy the token and add to env above"
    ],
    "required_scopes": [
      "repo - Full control of private repositories",
      "read:org - Read org membership (optional)",
      "read:user - Read user profile data"
    ],
    "fine_grained_token": {
      "note": "Fine-grained tokens work but need explicit repo access",
      "permissions": [
        "Contents: Read and write",
        "Issues: Read and write",
        "Pull requests: Read and write",
        "Metadata: Read"
      ]
    }
  },

  "// CAPABILITIES": [
    "search_repositories - Search GitHub repos",
    "get_repository - Get repo details",
    "list_branches - List repo branches",
    "get_file_contents - Read file from repo",
    "create_or_update_file - Write file to repo",
    "push_files - Push multiple files",
    "create_issue - Create new issue",
    "list_issues - List repo issues",
    "create_pull_request - Create PR",
    "list_pull_requests - List PRs",
    "get_pull_request - Get PR details",
    "create_branch - Create new branch",
    "fork_repository - Fork a repo"
  ],

  "// SECURITY_NOTES": [
    "Use fine-grained tokens when possible",
    "Limit token to specific repositories if feasible",
    "Never commit tokens to version control",
    "Rotate tokens periodically",
    "Use read-only tokens for exploration tasks"
  ],

  "// ENVIRONMENT_VARIABLE": {
    "description": "Alternative: Set token via environment variable",
    "bash": "export GITHUB_PERSONAL_ACCESS_TOKEN=ghp_xxx",
    "zsh_config": "Add to ~/.zshrc: export GITHUB_PERSONAL_ACCESS_TOKEN=ghp_xxx"
  }
}
