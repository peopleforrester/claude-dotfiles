{
  "// ABOUT": "Complete reference configuration for Claude Code settings.json",
  "// DOCS": "See README.md for detailed documentation of each option",
  "// MODEL": "The Claude model to use for responses",
  "model": "claude-sonnet-4-5-20250929",

  "// PERMISSIONS": "Controls what Claude can do automatically vs needs to ask",
  "permissions": {
    "// ALLOW": "Operations Claude can perform without asking",
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "LS",
      "Bash(npm run *)",
      "Bash(npm test *)",
      "Bash(pnpm *)",
      "Bash(yarn *)",
      "Bash(npx *)",
      "Bash(git status)",
      "Bash(git log *)",
      "Bash(git diff *)",
      "Bash(git branch *)"
    ],

    "// ASK": "Operations that require confirmation",
    "ask": [
      "Write",
      "Edit",
      "MultiEdit",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git merge *)",
      "Bash(rm *)"
    ],

    "// DENY": "Operations that are never allowed",
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/credentials*)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)",
      "Read(~/.gnupg/**)",
      "Bash(rm -rf *)",
      "Bash(rm -r /)",
      "Bash(curl * | bash)",
      "Bash(curl * | sh)",
      "Bash(wget * | bash)",
      "Bash(wget * | sh)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)",
      "Bash(> /dev/*)"
    ],

    "// ADDITIONAL_DIRECTORIES": "Extra directories Claude can access",
    "additionalDirectories": [],

    "// DEFAULT_MODE": "Options: prompt, acceptEdits, ignore",
    "defaultMode": "acceptEdits"
  },

  "// SANDBOX": "Container-based isolation for bash commands",
  "sandbox": {
    "// ENABLED": "Enable sandboxed execution of bash commands",
    "enabled": true,

    "// AUTO_ALLOW_BASH": "Skip permission prompts for sandboxed bash commands",
    "autoAllowBashIfSandboxed": true,

    "// EXCLUDED_COMMANDS": "Commands that run outside the sandbox",
    "excludedCommands": ["git", "docker"],

    "// NETWORK": "Network access configuration",
    "network": {
      "// ALLOW_LOCAL_BINDING": "Allow binding to localhost ports",
      "allowLocalBinding": true
    }
  },

  "// HOOKS": "Automation triggers for various events",
  "hooks": {
    "PreToolUse": [],

    "PostToolUse": [
      {
        "// DESCRIPTION": "Format TypeScript/JavaScript files after edit",
        "matcher": "Write(*.ts)|Write(*.tsx)|Edit(*.ts)|Edit(*.tsx)",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      },
      {
        "// DESCRIPTION": "Format JavaScript files after edit",
        "matcher": "Write(*.js)|Write(*.jsx)|Edit(*.js)|Edit(*.jsx)",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      },
      {
        "// DESCRIPTION": "Format Python files after edit",
        "matcher": "Write(*.py)|Edit(*.py)",
        "hooks": [
          {
            "type": "command",
            "command": "black \"$CLAUDE_FILE_PATH\" 2>/dev/null && ruff check --fix \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ],

    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "// DESCRIPTION": "Desktop notification on task completion (macOS)",
            "type": "command",
            "command": "osascript -e 'display notification \"Task completed\" with title \"Claude Code\"' 2>/dev/null || true"
          }
        ]
      }
    ],

    "Notification": [],
    "SubagentStop": []
  },

  "// ENVIRONMENT": "Environment variables for Claude Code",
  "env": {
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "0"
  },

  "// INCLUDE_CO_AUTHORED_BY": "Add co-author line to git commits",
  "includeCoAuthoredBy": true,

  "// CLEANUP_PERIOD_DAYS": "Days before cleaning up old session data",
  "cleanupPeriodDays": 30
}
