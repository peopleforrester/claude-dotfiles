{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Claude Code Skill Definition",
  "description": "Schema for SKILL.md YAML frontmatter",
  "type": "object",
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "maxLength": 64,
      "description": "Skill name (lowercase with hyphens, max 64 chars)"
    },
    "description": {
      "type": "string",
      "maxLength": 1024,
      "description": "Skill description (max 1024 chars)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Optional semantic version"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier"
    },
    "compatibility": {
      "type": "string",
      "description": "Minimum Claude Code version"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": { "type": "string" },
        "version": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "description": "Additional metadata"
    }
  }
}
